<?xml version="1.0" encoding="utf-8"?>

                                                        
    
                                          
                                                                                    
           

    <LinearLayout
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/textview_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:padding="16dp"
        android:orientation="vertical" android:tag="layout/ui_row_region_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                style="@style/ListItemPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/meta"
                android:ellipsize="end"
                android:singleLine="true"
                android:tag="binding_1"                />

            <TextView
                android:id="@+id/meta"
                style="@style/ListItemSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="12sp"
                android:tag="binding_2"                               
                                                                   />
        </RelativeLayout>


        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="binding_3"                        
            android:ellipsize="none"
            android:singleLine="false"
            style="@style/ListItemSecondary"/>

    </LinearLayout>
         