  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:tag="layout/map_container_frag_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Placeholder for map implementation -->
    <FrameLayout
      android:id="@+id/map"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />

    <FrameLayout
      android:id="@+id/map_overlay"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fitsSystemWindows="true" android:tag="binding_1">

      <include
        android:id="@+id/map_controls"
        layout="@layout/map_home_layout"
                                                               
                                                        
                                     />

      <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_margin="10dp">

        <TextView
          android:id="@+id/location_accuracy"
          android:layout_width="match_parent"
          android:background="@android:color/white"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:padding="5dp"
          android:tag="binding_2"                          
          android:textColor="@color/colorPrimary"
                                                                />
      </com.google.android.material.card.MaterialCardView>
    </FrameLayout>

    <ImageView
      android:id="@+id/map_crosshairs_img"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:adjustViewBounds="false"
      android:src="@drawable/ic_crosshairs"
      android:layout_gravity="center"/>
  </FrameLayout>
         