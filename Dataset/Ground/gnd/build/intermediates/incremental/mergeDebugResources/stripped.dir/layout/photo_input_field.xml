  <LinearLayout
    style="@style/FieldView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" android:tag="layout/photo_input_field_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <TextView
      style="@style/EditSubmission.Field.Label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:tag="binding_1"                  />

    <include
      layout="@layout/photo_field"
                                  
                                                              
      tools:visibility="visible" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <Button
        android:id="@+id/btn_select_photo"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="binding_2"                                        
        android:text="@string/add_photo"
        android:textColor="@color/colorAccent"
                                                                                      />

      <!--
      This is used to display validation errors, similar to other input fields.
      -->
      <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/photo_validation_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:tag="binding_3"        />

    </LinearLayout>

  </LinearLayout>

         