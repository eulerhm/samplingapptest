  <LinearLayout
    style="@style/FieldView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" android:tag="layout/text_input_field_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:tag="binding_1"                 
      style="@style/EditSubmission.Field.Label" />

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/text_input_layout"
      style="@style/EditSubmission.Field.Text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/text_input_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:tag="binding_2"                 
                                      
                                                                       
        tools:text="Text value" />

    </com.google.android.material.textfield.TextInputLayout>

  </LinearLayout>
         