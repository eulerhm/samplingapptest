<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/viewLinkItemRoot"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  tools:ignore="HardcodedText,UseCompoundDrawables,ContentDescription "
  tools:parentTag="android.widget.LinearLayout"
  >

  <LinearLayout
    android:id="@+id/viewLinkTrakt"
    style="@style/MovieLinksMenu.Item"
    >

    <ImageView
      style="@style/MovieLinksMenu.Icon"
      android:src="@drawable/ic_trakt"
      />

    <TextView
      style="@style/MovieLinksMenu.Title"
      android:text="Trakt"
      />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/viewLinkImdb"
    style="@style/MovieLinksMenu.Item"
    >

    <ImageView
      style="@style/MovieLinksMenu.Icon"
      android:src="@drawable/ic_imdb"
      />

    <TextView
      style="@style/MovieLinksMenu.Title"
      android:text="IMDb"
      />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/viewLinkTmdb"
    style="@style/MovieLinksMenu.Item"
    >

    <ImageView
      style="@style/MovieLinksMenu.Icon"
      android:src="@drawable/ic_tmdb"
      />

    <TextView
      style="@style/MovieLinksMenu.Title"
      android:text="TMDB"
      />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/viewLinkJustWatch"
    style="@style/MovieLinksMenu.Item"
    >

    <ImageView
      style="@style/MovieLinksMenu.Icon"
      android:src="@drawable/ic_justwatch"
      />

    <TextView
      style="@style/MovieLinksMenu.Title"
      android:text="JustWatch"
      />

  </LinearLayout>

</merge>
