<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/searchWidgetRoot"
  android:layout_width="match_parent"
  android:layout_height="@dimen/searchViewHeight"
  android:background="@drawable/bg_widget_search"
  android:elevation="2dp"
  android:orientation="horizontal"
  android:paddingStart="@dimen/spaceMedium"
  android:paddingEnd="@dimen/spaceMedium"
  >

  <ImageView
    android:id="@+id/searchWidgetIcon"
    android:layout_width="30dp"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/spaceMedium"
    android:elevation="2dp"
    android:src="@drawable/ic_showly_round"
    />

  <TextView
    android:id="@+id/searchWidgetText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:text="@string/textSearchFor"
    android:textColor="@color/colorGrayLight"
    android:textSize="16sp"
    />

</LinearLayout>