      android:layout_marginEnd="2dp"
      android:layout_weight="1"
      android:adjustViewBounds="true"
      android:src="@drawable/ic_star_empty"
      android:tag="7"
      app:tint="?android:attr/textColorPrimary"
      />

    <ImageView
      android:id="@+id/star8"
      android:layout_width="25dp"
