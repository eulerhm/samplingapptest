<?xml version="1.0" encoding="utf-8"?>

                                                         
    
                                          
                                                                                     
           

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"  android:tag="layout/ui_region_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.google.android.material.appbar.AppBarLayout
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
        </com.google.android.material.appbar.AppBarLayout>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/default_spacing">
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/default_spacing"
                    android:layout_height="wrap_content"
                    android:hint="@string/description"
                    android:background="@android:color/transparent"
                    android:textCursorDrawable="@drawable/cursor_white"
                    android:gravity="bottom"
                    android:inputType="textVisiblePassword"
                    android:id="@+id/description"
                    android:tag="binding_1"                   
                    app:met_floatingLabel="normal"
                    app:met_baseColor="@color/textPrimary"
                    app:met_primaryColor="@color/accent" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="@dimen/default_spacing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/latitude"
                    android:enabled="true"
                    android:id="@+id/latitude"
                    android:tag="binding_2"                             
                    android:inputType="numberDecimal|numberSigned"
                    app:met_floatingLabel="normal"
                    app:met_baseColor="@color/textPrimary"
                    app:met_primaryColor="@color/accent"
                    />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_marginStart="@dimen/default_spacing"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/longitude"
                    android:enabled="true"
                    android:id="@+id/longitude"
                    android:tag="binding_3"                              
                    android:inputType="numberDecimal|numberSigned"
                    app:met_floatingLabel="normal"
                    app:met_baseColor="@color/textPrimary"
                    app:met_primaryColor="@color/accent"
                    />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="@dimen/default_spacing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/radius"
                    android:id="@+id/radius"
                    android:digits="0123456789"
                    android:inputType="numberDecimal"
                    app:met_helperText="Meters"
                    app:met_floatingLabel="normal"
                    app:met_baseColor="@color/textPrimary"
                    app:met_primaryColor="@color/accent"
                    android:tag="binding_4"                                                                                                           
                    />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
         