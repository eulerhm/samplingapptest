  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGrey300"
    android:fitsSystemWindows="true"
    android:orientation="vertical" android:tag="layout/nav_drawer_header_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.imageview.ShapeableImageView
      android:id="@+id/user_image"
      style="@style/NavDrawerHeader.Image"
      android:tag="binding_1"        
      tools:background="@drawable/ground_logo" />

    <TextView
      android:id="@+id/user_display_name"
      style="@style/NavDrawerHeader.PrimaryText"
      android:tag="binding_2"           
      tools:text="User name" />

    <TextView
      android:id="@+id/user_email"
      style="@style/NavDrawerHeader.SecondaryText"
      android:tag="binding_3"     
      tools:text="User email" />

  </LinearLayout>
         