<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="bg_default">@android:color/black</color>
    <color name="border_blue">#46698B</color>
    <color name="dark_grey">#20242F</color>
    <dimen name="border_thickness">4dp</dimen>
    <dimen name="insert_layout_margin">@dimen/preview_image_view_margin</dimen>
    <dimen name="preview_image_thumbnail_margin">2dp</dimen>
    <dimen name="preview_image_thumbnail_size">65dp</dimen>
    <dimen name="preview_image_thumbnails_tab_layout_margin">@dimen/preview_image_view_margin</dimen>
    <dimen name="preview_image_view_margin">16dp</dimen>
    <dimen name="retry_image_size">60dp</dimen>
    <dimen name="retry_text_view_top_margin">16dp</dimen>
    <dimen name="text_sz_medium">14sp</dimen>
    <string name="crop">crop</string>
    <string name="done">done</string>
    <string name="error_failed_to_crop_and_save_image">Failed to crop and save image, please try again.</string>
    <string name="error_failed_to_load_into_file">Failed to load into file, please try again.</string>
    <string name="failed_to_load_image_tap_to_retry">Failed to load image.\nPlease tap to retry.</string>
    <string name="insert_label_with_count">Insert %d</string>
    <string name="preview_image_description">Preview Image</string>
    <string name="preview_image_thumbnail_description">Preview Image Thumbnail</string>
    <string name="retry">Retry</string>
    <style name="Base.ImageEditorTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="android:windowBackground">@color/bg_default</item>
        <item name="android:statusBarColor">@color/dark_grey</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>
    <style name="ErrorTextStyle">
        <item name="android:textSize">@dimen/text_sz_medium</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="InsertButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">8dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
</resources>