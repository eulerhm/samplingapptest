<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  tools:parentTag="android.widget.FrameLayout"
  >

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/myMoviesHeaderRoot"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingTop="@dimen/spaceNormal"
    android:paddingBottom="@dimen/spaceMicro"
    >

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/myMoviesHeaderLabel"
      style="@style/MyMovies.Label"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@id/myMoviesHeaderSortButton"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="Section Label"
      />

    <ImageView
      android:id="@+id/myMoviesHeaderSortButton"
      android:layout_width="24dp"
      android:layout_height="0dp"
      android:layout_marginEnd="@dimen/spaceNormal"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="@id/myMoviesHeaderLabel"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@id/myMoviesHeaderLabel"
      app:srcCompat="@drawable/ic_sort"
      app:tint="?android:attr/textColorPrimary"
      tools:visibility="visible"
      />

  </androidx.constraintlayout.widget.ConstraintLayout>

</merge>